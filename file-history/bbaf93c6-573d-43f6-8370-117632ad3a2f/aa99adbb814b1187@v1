import ComposableArchitecture
import UIKit

protocol AnyMappingModeModulePreviewUseCase {
    func loadModulePreview(moduleId: Int) async -> Refreshable<UIImage>
}

final class MappingModeModulePreviewUseCase: AnyMappingModeModulePreviewUseCase {
    @Dependency(\.modulePreviewRepository)
    private var previewRepository: ModulePreviewRepository

    func loadModulePreview(moduleId: Int) async -> Refreshable<UIImage> {
        let helper = ModulePreviewHelper(
            previewRepository: previewRepository,
            ignoreOfflineStatus: true
        )

        return await withCheckedContinuation { continuation in
            Task {
                await helper.reloadPreview(
                    moduleId: moduleId,
                    onStatusUpdated: { refreshable in
                        // Only complete when we reach a terminal state (success, failure, or idle)
                        switch refreshable {
                        case .success, .failure, .idle:
                            continuation.resume(returning: refreshable)
                        case .loading, .refreshing:
                            // Intermediate states - don't complete yet
                            break
                        }
                    }
                )
            }
        }
    }
}

#if DEBUG
extension MappingModeModulePreviewUseCase {
    static func makeWithDeps(
        previewRepository: ModulePreviewRepository
    ) -> MappingModeModulePreviewUseCase {
        withDependencies {
            $0.modulePreviewRepository = previewRepository
        } operation: {
            MappingModeModulePreviewUseCase()
        }
    }
}
#endif
